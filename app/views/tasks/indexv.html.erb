<div class="container">
  <h1><b><u>View Tasks</u></b></h1>
</div>

<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><a href="/tasks/indexv">View Tasks</a></li>
      <li role="presentation"><a href="/new_task">Add a New Task</a></li>
      <li role="presentation"><a href="/tasks/indexe">Edit Tasks</a></li>
      <li role="presentation"><a href="/tasks/indexd">Delete Tasks</a></li>
    </ul>
  </div>
</div>

<div class="jumbotron">
  <table class="container">
    <thead>
      <tr>
        <th>Task #</th>
        <th>Name</th>
        <th>Description</th>
        <th>Date</th>
        <th>Location</th>
        <th>User</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.date %></td>
          <td><%= task.location %></td>
          <td><%= task.user_id %></td>
          <td><a href="/tasks/<%= task.id %>">Show</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>