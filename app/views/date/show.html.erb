<html>
  <body>
    <div class="container">
      <center>
      <div class="row">
        <div class="col-md-6">
          <h4><u>Events</u></h4>
<ul class="list-group" >
  <% @events.each do |event| %>
    <li class="list-group-item">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
             <p>Name: <%= event.name %></p>
          </div>
          <div class="col-md-4">
            <p><%= event.description %></p>
            <p>Location: <%= event.location %></p>
            <br><br>
            <p style="margin-left: 200px;text-align: center;color:grey;"><%=event.date%></p>
          </div>
        </div>
      </div>
    </li>
  <%end%>
</ul>
        </div>
        <div class="col-md-6">
          <h4><u>Tasks</u></h4>
          <ul class="list-group" >
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
             <p>Name: <%= task.name %></p>
          </div>
          <div class="col-md-4">
            <p><%= task.description %></p>
            <p>Location: <%= task.location %></p>
            <br><br>
            <p style="margin-left: 200px;text-align: center;color:grey;"><%=task.date%></p>
          </div>
        </div>
      </div>
    </li>
  <%end%>
</ul>
        </div>
      </div>
        <h5><a href="/calendar">Back</a></h5>
      </center>
    </div>
    </body>
  </html>
